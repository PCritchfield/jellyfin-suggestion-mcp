#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run linting
echo "ğŸ” Running ESLint..."
yarn lint

# Run type checking
echo "ğŸ”§ Running TypeScript type check..."
yarn type-check

# Check for trailing whitespace and other basic issues
echo "ğŸ§¹ Checking for trailing whitespace..."
if git diff --cached --name-only | xargs grep -l "[[:space:]]$" 2>/dev/null; then
  echo "âŒ Found trailing whitespace. Please remove it."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"